version: '3.8'

services:
  vite-server:
    build: .
    ports:
      - 5173:5173
    volumes:
      - .:/usr/src/app
      - /usr/src/app/node_modules
    environment:
      NODE_ENV: development
    command: "npm run dev --host"
  language-server:
    build: .
    ports:
      - 30001:30001
    command: "npm run lsp"
